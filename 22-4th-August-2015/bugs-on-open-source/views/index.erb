    <style type="text/css">
      @-webkit-keyframes slidetounlock {
        0% {
          background-position: -720px 0;
        }
        100% {
          background-position: 720px 0;
        }
      }

      @-webkit-keyframes spinningslidetounlock {
        0% {
          background-position: -720px 0;
        }
        100% {
          background-position: 720px 0;
          -webkit-transform: rotate(360deg);
        }
      }
      .rainbows {
        position: absolute;
        width: 800px;
        height: 100px;
        left: 50%;
        top: 50%;
        margin-left: -400px !important;
        margin-top: -50px !important;
      }
      .rainbow {
        -webkit-animation: spinningslidetounlock 1.5s infinite linear;
        background: -webkit-gradient(linear, left top, right top, color-stop(0, #4070FF), color-stop(0.750, #FF9653), color-stop(0.875, #FFBBBB), color-stop(1, #2AFF31));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 160px !important;
        font-family: "Comic Sans MS", cursive, sans-serif !important;
        font-weight: bold !important;
        line-height: 160px !important;
        position: absolute;
        top:0;
        left:0;
      }
      .rainbow-nospin {
        -webkit-animation: slidetounlock 5s infinite linear;
        background: -webkit-gradient(linear, left top, right top, color-stop(0, #4070FF), color-stop(0.750, #FF9653), color-stop(0.875, #FFBBBB), color-stop(1, #2AFF31));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

      }
    </style>

    <script>
      var the_int = false;
      function addText(){
        var ranx = 400 - ( 800 * Math.random());
        var rany = 400 - ( 600 * Math.random());
        $('.rainbows').append('<div style="margin-left:'+ranx+'px;margin-top:'+rany+'px;" class="rainbow">TESTING</div>');
      }

    </script>

